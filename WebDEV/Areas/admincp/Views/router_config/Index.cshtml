@model IEnumerable<WebDEV.Areas.admincp.Models.router_config>

@{
    ViewBag.Title = "Cấu hình router";
    Layout = "~/Areas/admincp/Views/Shared/_AdminLayout.cshtml";
}
<style>
    textarea {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
    }

    .form-control {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
        box-shadow: none;
    }
    #dataTables {
        width: 100% !important;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cấu hình router</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover" id="dataTables" >
    <thead>
        <tr>
            <th>
               URL
            </th>
            <th>
               Controller
            </th>
            <th>
                Action
            </th>
            <th>
               Id Item
            </th>
            <th>
               Sử dụng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.controller)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.itemId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.actived)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            responsive: true
        });
    });</script>