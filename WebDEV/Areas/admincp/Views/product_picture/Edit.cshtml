@model WebDEV.Areas.admincp.Models.product_picture

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admincp/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>product_picture</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <label class="col-md-12">Id Sản Phẩm </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.id_product, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.id_product, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12">Hình 850x570</label>
        <div class="col-md-12">
            @Html.HiddenFor(model => model.filename, new { htmlAttributes = new { @class = "form-control" } })
            <img src="~/upload/images/products/@Model.filename" alt="Image" height="50" width="50" />
            <input type="file" name="file" id="file" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Tên Hình </label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Sử dụng </label>
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.active)
                @Html.ValidationMessageFor(model => model.active, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
