@model IEnumerable<WebDEV.Areas.admincp.Models.product_category>

@{
    ViewBag.Title = "Danh sách danh mục sản phẩm";
    Layout = "~/Areas/admincp/Views/Shared/_AdminLayout.cshtml";
}
<style>
    textarea {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
    }

    .form-control {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
        box-shadow: none;
    }

    #dataTables {
        width: 100% !important;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách danh mục sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover" id="dataTables">
    <thead>
        <tr>
            <th>
                Name
            </th>

            <th>
                @Html.DisplayNameFor(model => model.images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datecreate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.views)
            </th>

            <th>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="~/@item.url">
                        @item.name
                    </a> 
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.images)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datecreate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.views)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.parent)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            responsive: true
        });
    });</script>