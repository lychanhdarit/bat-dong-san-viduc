@model IEnumerable<WebDEV.Areas.admincp.Models.product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/admincp/Views/Shared/_AdminLayout.cshtml";
}
<style>
    textarea {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
    }

    .form-control {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
        box-shadow: none;
    }

    #dataTables {
        width: 100% !important;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover" id="dataTables">
    <thead>
        <tr>
            <th>
                Hình đại diện
            </th>
            <th>
                Danh sách hình ảnh
            </th>
            <th>
                Tên
            </th>
            <th>
                Giá
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Lượt xem
            </th>

            <th>
                Danh mục
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/upload/images/products/@item.images" style="height:50px" />
            </td>
            <td>
                <a href="~/admincp/product_picture/?idProduct=@item.id" class="btn btn-default">Hình ảnh</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datecreate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.views)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.product_category.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            responsive: true
        });
    });</script>