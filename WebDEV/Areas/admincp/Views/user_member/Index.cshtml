@model IEnumerable<WebDEV.Areas.admincp.Models.user_member>

@{
    ViewBag.Title = "User";
    Layout = "~/Areas/admincp/Views/Shared/_AdminLayout.cshtml";
}
<style>
    textarea {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
    }

    .form-control {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
        box-shadow: none;
    }

    #dataTables {
        width: 100% !important;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">User</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="panel-body">
    <table class="table table-striped table-bordered table-hover" id="dataTables">
        <thead>
            <tr>
                <th>
                    Username
                </th>

                <th>
                    Họ tên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>

                <th>
                   Sử dụng
                </th>

                <th>
                    Nhóm
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.fullname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phone)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.active)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.user_group.name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })|
                        @Html.ActionLink("ResetPass", "ResetPass", new { id = item.id }) 
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            responsive: true
        });
    });</script>