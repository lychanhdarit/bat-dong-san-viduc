@model WebDEV.Areas.admincp.Models.picture

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admincp/Views/Shared/_AdminLayout.cshtml";
}

<style>
    textarea {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
    }

    .form-control {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
        box-shadow: none;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Sửa</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>picture</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="col-md-12">Tên</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Hình ảnh</label>
            <div class="col-md-12">
                @Html.HiddenFor(model => model.filename, new { htmlAttributes = new { @class = "form-control" } })
                <img src="~/upload/images/pictures/@Model.filename" alt="Image" height="50" />
                <input type="file" name="file" id="file" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Nhóm hình ảnh</label>
            <div class="col-md-12">
                @Html.DropDownList("group_picture", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.group_picture, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Sử dụng</label>
            <div class="col-md-12">
                <div class="checkbox">
                    @Html.EditorFor(model => model.active)
                    @Html.ValidationMessageFor(model => model.active, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">URL</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.note, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
