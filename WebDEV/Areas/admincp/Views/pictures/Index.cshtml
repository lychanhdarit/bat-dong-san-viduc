@model IEnumerable<WebDEV.Areas.admincp.Models.picture>

@{
    ViewBag.Title = "Danh sách hình ảnh";
    Layout = "~/Areas/admincp/Views/Shared/_AdminLayout.cshtml";
}
<style>
    textarea {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
    }

    .form-control {
        width: 100%;
        border: 1px solid #d1d1d1;
        border-radius: 0px;
        box-shadow: none;
    }

    #dataTables {
        width: 100% !important;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách hình ảnh</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover" id="dataTables">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Tên hình
            </th>
            <th>
                Sử dụng
            </th>
            <th>
                Note
            </th>
            <th>
                Nhóm
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/upload/images/pictures/@item.filename" style="height:50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.picture_group.name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables').DataTable({
            responsive: true
        });
    });</script>